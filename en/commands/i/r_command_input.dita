<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE reference PUBLIC "-//OASIS//DTD DITA Reference//EN" "reference.dtd">
<reference id="r_command_input" xml:lang="en">
    <title>\input</title>
    <shortdesc>Places the contents of an external file into the document.</shortdesc>
    <prolog>
        <metadata>
            <audience type="user"/>
            <category/>
            <prodinfo>
                <prodname>ConTeXt</prodname>
                <vrmlist>
                    <vrm version="iv" release="production"/>
                </vrmlist>
            </prodinfo>
        </metadata>
    </prolog>
    <refbody>
        <refsyn>
            <title>Syntax</title>
            <synph> \input <delim>{</delim>
                <var importance="required">FILENAME</var>
                <delim>}</delim>
            </synph>
            <simpletable>
                <sthead>
                    <stentry>Name</stentry>
                    <stentry>Description</stentry>
                    <stentry>Values</stentry>
                </sthead>
                <strow>
                    <stentry><xref keyref="FILENAME" type="reference"/></stentry>
                    <stentry><ph conkeyref="FILENAME/placeholder_desc"/></stentry>
                    <stentry><ph conkeyref="FILENAME/placeholder_value"/></stentry>
                </strow>
            </simpletable>
            <note>An alternate syntax for this command omits the curly braces.</note>
        </refsyn>
        <example id="mwe" otherprops="no_output">
        <title>Minimal Working Example</title>  
            <codeblock>
\starttext

\input{knuth}

\stoptext
            </codeblock>
        </example>
        <example id="example_02" otherprops="no_output">
            <title>Alternate Syntax</title>  
            <codeblock>
\starttext

\input knuth

\stoptext
            </codeblock>
        </example>
    </refbody>
