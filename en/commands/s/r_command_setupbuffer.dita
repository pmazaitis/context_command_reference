<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE reference PUBLIC "-//OASIS//DTD DITA Reference//EN" "reference.dtd">
<reference id="r_command_setupbuffer">
    <title>\setupbuffer</title>
    <shortdesc>The <cmdname>\setupbuffer</cmdname> applies groups of settings to a named
        buffer.</shortdesc>
    <prolog>
        <metadata>
            <category>block</category>
            <prodinfo>
                <prodname>ConTeXt</prodname>
                <vrmlist>
                    <vrm version="iv" release="production"/>
                </vrmlist>
            </prodinfo>
        </metadata>
    </prolog>
    <refbody>
        <refsyn>
            <title>Syntax</title>
            <synph> \setupbuffer <delim>[</delim>
                <var importance="required">LABEL</var>
                <delim>]</delim>
                <delim>[</delim>
                <var importance="required">settings</var>
                <delim>]</delim>
            </synph>
            <simpletable>
                <sthead>
                    <stentry>Name</stentry>
                    <stentry>Values</stentry>
                    <stentry>Description</stentry>
                </sthead>
                <strow>
                    <stentry>identifier</stentry>
                    <stentry><xref keyref="LABEL" type="reference"/></stentry>
                    <stentry><p>A meaningful name for retreiving the buffer.</p></stentry>
                </strow>
                <strow>
                    <stentry>settings</stentry>
                    <stentry>(see settings table)</stentry>
                    <stentry><p conkeyref="definitions/settings_description"/></stentry>
                </strow>
            </simpletable>
        </refsyn>
        <section>
            <title>Settings</title>
            <table frame="all" rowsep="1" colsep="1" id="table_command_setupbuffer_settings">
                <title></title>
                <tgroup cols="3">
                    <colspec colname="c1" colnum="1" colwidth="1.23*"/>
                    <colspec colname="c2" colnum="2" colwidth="1*"/>
                    <colspec colname="c3" colnum="3" colwidth="3.86*"/>
                    <thead>
                        <row>
                            <entry>Key</entry>
                            <entry>Value</entry>
                            <entry>Description</entry>
                        </row>
                    </thead>
                    <tbody>
                        <row id="settings_start">
                            <entry>after</entry>
                            <entry><xref keyref="SCOPE" type="reference"/></entry>
                            <entry>Commands to come after</entry>
                        </row>
                        <row id="settings_end">
                            <entry>before</entry>
                            <entry><xref keyref="SCOPE" type="reference"/></entry>
                            <entry>Commands to come before</entry>
                        </row>
                    </tbody>
                </tgroup>
            </table>
        </section>
        <example otherprops="no_output">
            <title>Minimal Working Example</title>
            <codeblock>
\starttext

\setupbuffer[MyBuffer][before={\blank[big]}, after={\blank[small]}]

\stoptext
            </codeblock>
        </example>
    </refbody>
