<reference id="r_command_getbuffer">
    <title>\getbuffer</title>
    <shortdesc>The <cmdname>\getbuffer</cmdname> command retreives a buffer and adds the content to
        the document in the place where the command is used.</shortdesc>
    <prolog>
        <metadata>
            <category>block</category>
            <prodinfo>
                <prodname>ConTeXt</prodname>
                <vrmlist>
                    <vrm version="iv" release="production"/>
                </vrmlist>
            </prodinfo>
        </metadata>
    </prolog>
    <refbody> 
        <refsyn>
            <title>Syntax</title>
            <synph>
                <kwd>\getbuffer</kwd>  
                <delim>[</delim>
                <var importance="optional">NAME</var>
                <delim>]</delim>
            </synph>
            <simpletable>
                <sthead>
                    <stentry>Name</stentry>
                    <stentry>Values</stentry>
                    <stentry>Description</stentry>
                </sthead>
                <strow>
                    <stentry>identifier</stentry>
                    <stentry><xref keyref="NAME" type="reference"/></stentry>
                    <stentry>A meaningful name for retreiving the buffer.</stentry>
                </strow>
            </simpletable>
        </refsyn>
        <example otherprops="no_output">
            <title>Minimal Working Example</title>
            <codeblock>
\starttext

\startbuffer[MyBuffer]
\input knuth
\stopbuffer

\getbuffer[MyBuffer]

\stoptext
            </codeblock>
        </example>
    </refbody>
